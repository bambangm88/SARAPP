<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Main.tentang">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_tentang"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Tentang Aplikasi"
            android:elevation="5dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sarlogo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Rizk Rama Eka Saputra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="330dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="IMPLEMENTASI  ALGORITMA  ANT COLONY N UNTUK PENCARIAN RUTE TERDEKAT PADA APLIKASI SAR (SEARCH AND RESCUE)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</RelativeLayout>